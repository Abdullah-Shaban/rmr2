BINDIR	= inst/hbase-io
.PHONY: all hbase-io

PKG_CXXFLAGS=`${R_HOME}/bin/Rscript -e "Rcpp:::CxxFlags()"`
PKG_LIBS = `$(R_HOME)/bin/Rscript -e "Rcpp:::LdFlags()"`

all: $(SHLIB) hbase-io

hbase-io:
	((which hbase && (cd hbase-io; sh build_linux.sh)) || echo "can't build hbase IO classes, skipping" >&2)
	
clean:
	echo "not implemented yet"
